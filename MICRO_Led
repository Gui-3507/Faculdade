#include "pic18f452.h"
#define led1 PORTDbits.RD2
#define led2 PORTCbits.RC4
#define led3 PORTCbits.RC5


void main(void)
{
    // I/O - Configuração
    TRISD = 0x00;
    TRISC = 0x00;
    
    // I/O - Atribuição de nível lógico
    led1 = 0;
    led2 = 0;
    led3 = 0;

    while(1)
    {
        
        led1 = 1;
        led2 = 0;
        led3 = 0;
        __delay_ms(250/4);
        
        led1 = 0;
        led2 = 1;
        led3 = 0;
        __delay_ms(250/4);
        
        led1 = 0;
        led2 = 0;
        led3 = 1;
        __delay_ms(250/4);
        
        led1 = 0;
        led2 = 0;
        led3 = 0;
        __delay_ms(250/4);
        
    
    }
}
